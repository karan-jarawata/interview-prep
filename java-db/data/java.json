        "name": "Core Concepts",
        "topics": [
          { "title": "Auto-Configuration", "priority": "high", "note": "Startup lifecycle, Starters, Classpath scanning." },
          { "title": "Configuration", "priority": "high", "note": "application.yml, Profiles (dev/prod), External Config." },
          { "title": "Embedded Servers", "priority": "low", "note": "Tomcat vs Jetty vs Netty." }
        ]
      },
      {
        "name": "Stereotypes",
        "topics": [
          { "title": "Components", "priority": "high", "note": "@Component, @Service, @Repository, @Controller." },
          { "title": "Bean Definition", "priority": "high", "note": "@Configuration & @Bean." }
        ]
      }
    ]
  },
  {
