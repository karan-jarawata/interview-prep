        "topics": [
          { "title": "Build Tools", "priority": "medium", "note": "Maven/Gradle internals, Dependency tree management." },
          { "title": "Code Quality", "priority": "low", "note": "SonarQube, Static Analysis, Clean Code." }
        ]
      },
      {
