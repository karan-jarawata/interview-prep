      {
        "name": "API Design",
        "topics": [
          { "title": "@RestController", "priority": "high", "note": "Mappings, Methods, Status Codes." },
          { "title": "Request Handling", "priority": "high", "note": "@RequestBody, @RequestParam, Pagination & Sorting." },
          { "title": "DTO Pattern", "priority": "high", "note": "Entity vs DTO separation (MapStruct)." }
        ]
      },
      {
        "name": "Reliability",
        "topics": [
          { "title": "Exception Handling", "priority": "high", "note": "Global handling with @ControllerAdvice." },
          { "title": "Validation", "priority": "medium", "note": "@Valid, Custom validators." }
        ]
      }
    ]
  },
