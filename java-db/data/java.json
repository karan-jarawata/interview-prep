[
  {
    "id": 0,
    "title": " 0: The Foundation",
    "subtitle": "How Java Actually Works",
    "groups": [
      {
        "name": "Runtime Environment",
        "topics": [
          { "title": "JDK vs JRE vs JVM", "priority": "high", "note": "JDK = Tools, JRE = Libs, JVM = Engine." },
          { "title": "JVM Architecture", "priority": "high", "note": "Classloader, Runtime Data Areas, Execution Engine." },
          { "title": "Memory Management", "priority": "high", "note": "Stack (Methods) vs Heap (Eden, Survivor, Old Gen) & Metaspace." },
          { "title": "Garbage Collection", "priority": "high", "note": "G1GC, ZGC (2026 Std), Shenandoah. Tuning & Logs." }
        ]
      },
      {
        "name": "Advanced Internals",
        "topics": [
          { "title": "JIT & Optimization", "priority": "medium", "note": "HotSpot, Escape Analysis & Scalar Replacement." },
          { "title": "Java Memory Model (JMM)", "priority": "high", "note": "Happens-before relationship, visibility, and instruction reordering." },
          { "title": "Troubleshooting", "priority": "high", "note": "Heap dumps (jmap), Thread dumps (jstack), VisualVM." },
          { "title": "Native Interface", "priority": "low", "note": "JNI & Native code basics." }
        ]
      }
    ]
  },
  {
    "id": 1,
    "title": " 1: Java Core",
    "subtitle": "The Non-Negotiable Core",
    "groups": [
      {
        "name": "Language Basics",
        "topics": [
          { "title": "OOP Pillars", "priority": "high", "note": "Polymorphism, Encapsulation, Composition over Inheritance." },
          { "title": "Object Contracts", "priority": "high", "note": "Overriding equals(), hashCode(), compareTo()." },
          { "title": "ClassLoader Hierarchy", "priority": "medium", "note": "Bootstrap, Extension, Application classloaders & Custom Classloaders." },
          { "title": "Generics", "priority": "medium", "note": "Type erasure, Wildcards (<? extends T>)." },
          { "title": "Enums", "priority": "medium", "note": "Enums as full-fledged classes with methods." }
        ]
      },
      {
        "name": "Collections & IO",
        "topics": [
          { "title": "Collections Framework", "priority": "high", "note": "Lists, Maps, Sets & Internal working (HashMap collision handling)." },
          { "title": "Concurrent Collections", "priority": "medium", "note": "ConcurrentHashMap, CopyOnWriteArrayList." },
          { "title": "Java I/O & NIO", "priority": "medium", "note": "File handling, NIO.2, Buffers, Channels." },
          { "title": "Date & Time API", "priority": "medium", "note": "java.time (LocalDate, Instant, Duration)." }
        ]
      },
      {
        "name": "Modern Java (17 & 21)",
        "topics": [
          { "title": "Records", "priority": "high", "note": "Concise data carriers. Immutability patterns." },
          { "title": "Sealed Classes", "priority": "medium", "note": "Controlling inheritance hierarchy." },
          { "title": "Pattern Matching", "priority": "medium", "note": "instanceof improvements and switch expressions." },
          { "title": "Virtual Threads", "priority": "high", "note": "High-throughput concurrency (Project Loom)." }
        ]
      },
      {
        "name": "Concurrency & Functional",
        "topics": [
          { "title": "Multithreading Basics", "priority": "high", "note": "Thread lifecycle, Synchronization, Volatile." },
          { "title": "CompletableFuture Deep Dive", "priority": "high", "note": "Async chaining, combining futures, exception handling." },
          { "title": "Advanced Concurrency", "priority": "medium", "note": "ForkJoinPool, CountDownLatch, CyclicBarrier, False Sharing." },
          { "title": "Stream API", "priority": "high", "note": "Processing data pipelines (filter, map, collect)." },
          { "title": "Reactive Basics", "priority": "low", "note": "Project Reactor concepts (Mono/Flux)." }
        ]
      }
    ]
  },
  {
    "id": 2,
    "title": " 2: The Data Layer",
    "subtitle": "SQL & Hibernate",
    "groups": [
      {
        "name": "Database Fundamentals",
        "topics": [
          { "title": "SQL Basics", "priority": "high", "note": "JOINS, Indexing, Normalization." },
          { "title": "HikariCP & Pooling", "priority": "high", "note": "Connection pool sizing, timeouts, and internal mechanics." },
          { "title": "JDBC Internals", "priority": "low", "note": "Connection, Statement, ResultSet." },
          { "title": "Migrations", "priority": "high", "note": "Flyway or Liquibase for schema versioning." }
        ]
      },
      {
        "name": "ORM (Hibernate/JPA)",
        "topics": [
          { "title": "Entity Mapping", "priority": "high", "note": "@Entity, Relationships (@OneToMany), Lifecycle." },
          { "title": "Hibernate Internals", "priority": "high", "note": "Session Cache (L1), Dirty Checking, Persistence Context." },
          { "title": "Fetching & Performance", "priority": "high", "note": "Lazy vs Eager, N+1 Problem, 2nd Level Cache." },
          { "title": "Locking", "priority": "medium", "note": "Optimistic (@Version) vs Pessimistic Locking." }
        ]
      },
      {
        "name": "Transactions",
        "topics": [
          { "title": "ACID Properties", "priority": "medium", "note": "Atomicity, Consistency, Isolation, Durability." },
          { "title": "Isolation Levels", "priority": "medium", "note": "Read Committed, Repeatable Read, Serializable." }
        ]
      }
    ]
  },
  {
    "id": 3,
    "title": " 3: Spring Core",
    "subtitle": "The Framework Theory",
    "groups": [
      {
        "name": "Container Fundamentals",
        "topics": [
          { "title": "Inversion of Control (IoC)", "priority": "high", "note": "Spring manages object creation." },
          { "title": "Dependency Injection (DI)", "priority": "high", "note": "Constructor (Best) vs Field Injection." },
          { "title": "Advanced Bean Lifecycle", "priority": "high", "note": "BeanPostProcessor, BeanFactoryPostProcessor, Initialization callbacks." },
          { "title": "Bean Scopes", "priority": "medium", "note": "Singleton, Prototype, Request, Session." }
        ]
      },
      {
        "name": "Advanced Spring",
        "topics": [
          { "title": "Spring AOP Internals", "priority": "high", "note": "Pointcuts, Advices, Weaving, CGLIB vs JDK Dynamic Proxies." },
          { "title": "@Transactional", "priority": "high", "note": "Propagation, Isolation, Rollback rules internals." }
        ]
      }
    ]
  },
  {
    "id": 4,
    "title": " 4: Spring Boot Basics",
    "subtitle": "The Annotation Dictionary",
    "groups": [
      {
        "name": "Core Concepts",
        "topics": [
          { "title": "Spring vs Spring Boot", "priority": "high", "note": "Manual XML/config vs Opinionated Auto-configuration & Starters." },
          { "title": "Auto-Configuration", "priority": "high", "note": "Startup lifecycle, @EnableAutoConfiguration, Classpath scanning." },
          { "title": "Configuration", "priority": "high", "note": "application.yml, Profiles (dev/prod), External Config." },
          { "title": "Embedded Servers", "priority": "low", "note": "Tomcat vs Jetty vs Netty mechanics." }
        ]
      },
      {
        "name": "Stereotypes & Management",
        "topics": [
          { "title": "Components", "priority": "high", "note": "@Component, @Service, @Repository, @Controller." },
          { "title": "Bean Definition", "priority": "high", "note": "@Configuration & @Bean." },
          { "title": "Actuator & Metrics", "priority": "medium", "note": "Health checks, metrics exposure, and custom endpoints." }
        ]
      }
    ]
  },
  {
    "id": 5,
    "title": " 5: Building REST APIs",
    "subtitle": "The Web Layer & MVC",
    "groups": [
      {
        "name": "Spring MVC Internals",
        "topics": [
          { "title": "Dispatcher Servlet", "priority": "high", "note": "Front Controller Pattern, Request Routing lifecycle." },
          { "title": "Handler Mapping & Adapters", "priority": "medium", "note": "How Spring maps URLs to Controller methods." },
          { "title": "View Resolver", "priority": "medium", "note": "Resolving logical view names to actual views (mostly legacy/SSR, but core to MVC)." },
          { "title": "Filters vs Interceptors", "priority": "high", "note": "Servlet Filter vs HandlerInterceptor execution order and use cases." }
        ]
      },
      {
        "name": "API Design",
        "topics": [
          { "title": "@RestController", "priority": "high", "note": "Mappings, Methods, Status Codes." },
          { "title": "Request Handling", "priority": "high", "note": "@RequestBody, @RequestParam, @PathVariable, Pagination & Sorting." },
          { "title": "DTO Pattern", "priority": "high", "note": "Entity vs DTO separation (MapStruct)." }
        ]
      },
      {
        "name": "Reliability",
        "topics": [
          { "title": "Exception Handling", "priority": "high", "note": "Global handling with @ControllerAdvice and @ExceptionHandler." },
          { "title": "Validation", "priority": "medium", "note": "Hibernate Validator (@Valid, @NotNull, Custom validators)." }
        ]
      }
    ]
  },
  {
    "id": 6,
    "title": " 6: Application Security",
    "subtitle": "AuthN vs AuthZ",
    "groups": [
      {
        "name": "Spring Security Core",
        "topics": [
          { "title": "Architecture", "priority": "high", "note": "SecurityFilterChain, AuthenticationManager, UserDetailsService." },
          { "title": "Mechanisms", "priority": "medium", "note": "Password Hashing (BCrypt), CSRF, CORS." }
        ]
      },
      {
        "name": "Modern Auth",
        "topics": [
          { "title": "JWT & Stateless", "priority": "high", "note": "Token-based auth vs Session-based, Token verification filters." },
          { "title": "OAuth2 / OIDC", "priority": "high", "note": "Social Login flows, Authorization Code grant." },
          { "title": "Advanced Security", "priority": "medium", "note": "Method-level security (@PreAuthorize, @PostFilter)." }
        ]
      }
    ]
  },
  {
    "id": 7,
    "title": " 7: Microservices & Cloud",
    "subtitle": "Distributed Systems",
    "groups": [
      {
        "name": "Spring Cloud",
        "topics": [
          { "title": "Service Discovery", "priority": "medium", "note": "Eureka/Consul registry and resolution." },
          { "title": "API Gateway", "priority": "high", "note": "Routing, Filtering, and edge security." },
          { "title": "Config Server", "priority": "medium", "note": "Centralized external configuration." }
        ]
      },
      {
        "name": "Resilience & Patterns",
        "topics": [
          { "title": "Circuit Breaker", "priority": "high", "note": "Resilience4j, Bulkheading, Rate Limiting." },
          { "title": "Distributed Patterns", "priority": "high", "note": "Saga Pattern, CAP Theorem, Idempotency." },
          { "title": "Event-Driven Microservices", "priority": "high", "note": "Outbox Pattern, CQRS basics." }
        ]
      },
      {
        "name": "Observability",
        "topics": [
          { "title": "Tracing & Metrics", "priority": "high", "note": "Micrometer, OpenTelemetry, Distributed Tracing (Trace ID/Span ID)." },
          { "title": "Monitoring Stack", "priority": "medium", "note": "Prometheus, Grafana, ELK/EFK Stack." }
        ]
      }
    ]
  },
  {
    "id": 8,
    "title": " 8: Advanced Data (Redis)",
    "subtitle": "High Performance Caching",
    "groups": [
      {
        "name": "Redis Fundamentals",
        "topics": [
          { "title": "Data Types", "priority": "high", "note": "String, List, Set, Hash, Sorted Set (ZSet)." },
          { "title": "Persistence", "priority": "medium", "note": "RDB (Snapshots) vs AOF (Append Only File)." },
          { "title": "Architecture", "priority": "medium", "note": "Single Node vs Sentinel (HA) vs Cluster (Sharding)." }
        ]
      },
      {
        "name": "Spring Integration",
        "topics": [
          { "title": "Spring Data Redis", "priority": "high", "note": "RedisTemplate, ReactiveRedisTemplate." },
          { "title": "Caching Abstraction", "priority": "high", "note": "@Cacheable, @CachePut, @CacheEvict, TTL management." }
        ]
      },
      {
        "name": "Advanced Usage",
        "topics": [
          { "title": "Distributed Locks", "priority": "high", "note": "Implementing locking with Redisson (Watchdog mechanism)." },
          { "title": "Pub/Sub", "priority": "medium", "note": "Message broadcasting basics." }
        ]
      }
    ]
  },
  {
    "id": 9,
    "title": " 9: Messaging (Kafka)",
    "subtitle": "Event Streaming Architecture",
    "groups": [
      {
        "name": "Core Architecture",
        "topics": [
          { "title": "Broker Fundamentals", "priority": "high", "note": "Topics, Partitions, Offsets, Replication Factor." },
          { "title": "Kafka Internals", "priority": "high", "note": "Leader Election, In-Sync Replicas (ISR), Log Compaction, Zero Copy." },
          { "title": "Zookeeper vs KRaft", "priority": "medium", "note": "Controller quorum and metadata management without ZK." }
        ]
      },
      {
        "name": "Producers & Consumers",
        "topics": [
          { "title": "Producer Internals", "priority": "high", "note": "Acks (0, 1, all), Retries, Idempotence, Batching, Partitioners." },
          { "title": "Consumer Groups", "priority": "high", "note": "Group ID, Rebalancing Protocols, Offset Commit strategies (Auto vs Manual)." },
          { "title": "Delivery Semantics", "priority": "high", "note": "At-most-once, At-least-once, Exactly-once." }
        ]
      },
      {
        "name": "Spring for Kafka",
        "topics": [
          { "title": "Implementation", "priority": "high", "note": "KafkaTemplate, @KafkaListener, Serialization (Avro/JSON)." },
          { "title": "Reliability", "priority": "high", "note": "Error Handling, RetryTopic, Dead Letter Queues (DLQ)." }
        ]
      }
    ]
  },
  {
    "id": 10,
    "title": " 10: System Design",
    "subtitle": "Architecture & Patterns",
    "groups": [
      {
        "name": "Design Patterns",
        "topics": [
          { "title": "GoF Patterns", "priority": "medium", "note": "Singleton, Factory, Builder, Strategy, Observer." },
          { "title": "Architectural Patterns", "priority": "high", "note": "Clean/Hexagonal Architecture, SOLID principles." }
        ]
      }
    ]
  },
  {
    "id": 11,
    "title": " 11: Testing & DevOps",
    "subtitle": "Delivery Pipeline",
    "groups": [
