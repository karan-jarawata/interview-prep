        "topics": [
          { "title": "JWT & Stateless", "priority": "high", "note": "Token-based auth vs Session-based." },
          { "title": "OAuth2 / OIDC", "priority": "high", "note": "Social Login flows." },
          { "title": "Advanced Security", "priority": "medium", "note": "Method-level security (@PreAuthorize)." }
        ]
      }
    ]
  },
  {
